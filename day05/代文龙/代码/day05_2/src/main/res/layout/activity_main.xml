<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="@dimen/dp_54"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main1"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/sv_main"
                    app:iconifiedByDefault="false"
                    app:queryHint="搜索诗人名字 诗词关键词"
                    android:background="@drawable/backgound_sv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="@dimen/dp_264"
                    android:layout_height="@dimen/dp_39"/>

                <ImageView
                    android:id="@+id/iv_main1"
                    android:src="@drawable/qiandao"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_21"/>

                <ImageView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ling"
                    app:layout_constraintRight_toLeftOf="@id/iv_main1"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_22"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main2"
                app:layout_constraintTop_toBottomOf="@id/cl_main1"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                android:paddingTop="@dimen/dp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/a"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="@dimen/dp_339"
                    android:layout_height="@dimen/dp_150"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main3"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                android:paddingTop="@dimen/dp_33"
                app:layout_constraintTop_toBottomOf="@id/cl_main2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/ll_main1"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_71">

                    <ImageView
                        android:src="@drawable/meirituijian"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"/>

                    <TextView
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="每日推荐"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main2"
                    android:layout_marginLeft="@dimen/dp_23"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ll_main1"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_71">

                    <ImageView
                        android:src="@drawable/feihualing"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"/>

                    <TextView
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="飞花令"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main3"
                    android:layout_marginLeft="@dimen/dp_23"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ll_main2"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_71">

                    <ImageView
                        android:src="@drawable/shige"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"/>

                    <TextView
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="诗歌社群"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ll_main3"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_71">

                    <ImageView
                        android:src="@drawable/paihang"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"/>

                    <TextView
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="排行榜"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ll_main4"
                    android:layout_marginLeft="@dimen/dp_23"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_71">

                    <ImageView
                        android:src="@drawable/huiyuan"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"/>

                    <TextView
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="会员专区"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main4"
                android:background="#fff"
                android:paddingTop="@dimen/dp_34"
                android:paddingRight="@dimen/dp_18"
                android:paddingLeft="@dimen/dp_18"
                app:layout_constraintTop_toBottomOf="@id/cl_main3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_main1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="诗歌群PK"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="08-01日晚8:00开始"
                    android:textSize="@dimen/sp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_main2"
                    android:src="@drawable/pk"
                    app:layout_constraintTop_toBottomOf="@id/tv_main1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_width="@dimen/dp_339"
                    android:layout_height="@dimen/dp_169"/>

                <Button
                    android:id="@+id/btn_main1"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="丁香诗社"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:background="@drawable/backgount_btn_dingxiang"
                    app:layout_constraintTop_toBottomOf="@id/iv_main2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_30"/>

                <Button
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="月季诗社"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:background="@drawable/backgount_btn_yueji"
                    app:layout_constraintTop_toBottomOf="@id/iv_main2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="@dimen/dp_45"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_14"
                    android:text="这两个诗社你更看好谁"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_13"
                    app:layout_constraintTop_toBottomOf="@id/btn_main1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                app:layout_constraintTop_toBottomOf="@id/cl_main4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_main2"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="荣誉诗人"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="更多 >"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginTop="@dimen/dp_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_main1"
                    android:layout_marginTop="@dimen/dp_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_main2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main6"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/cl_main5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_main3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="一起读诗"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="更多 >"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginTop="@dimen/dp_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_main2"
                    android:layout_marginTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/tv_main3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main7"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/cl_main6"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_main4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="诗词佳句"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="更多 >"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginTop="@dimen/dp_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_main3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_main4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main8"
                android:paddingLeft="@dimen/dp_18"
                android:paddingRight="@dimen/dp_18"
                app:layout_constraintTop_toBottomOf="@id/cl_main7"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_main5"
                    android:layout_marginTop="@dimen/dp_30"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#000"
                    android:text="每周佳作"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_main4"
                    android:layout_marginTop="@dimen/dp_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_main5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingBottom="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    
    <com.google.android.material.tabs.TabLayout
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/home"
            android:text="首页"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/ding"
            android:text="写诗"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/shop"
            android:text="传图"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/gou"
            android:text="作品"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/draw"
            android:text="我的"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>